---
interface Props {
  title: string;
}
import "@fontsource-variable/josefin-slab";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Todos los días a la 7 AM ,Radio por internet de música andina"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
  }
  html {
    font-family: system-ui, sans-serif;
  }
  body {
    width: 100vw;
    min-height: 100vh;
    overflow-x: hidden;
  }

  h1,
  p {
    font-family: "Josefin Slab Variable", serif;
  }
</style>
