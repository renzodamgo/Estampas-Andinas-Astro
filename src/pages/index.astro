---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import bgImage from "../../public/Assets/bg.webp";
import estampaMobile from "../../public/Assets/estampa-mobile.webp";
import estampaDesktop from "../../public/Assets/estampa-desktop.webp";
---

<Layout title="Estampas Andinas por Orestes Damián">
  <main>
    <div class="absolute w-screen h-screen z-0 overflow-hidden">
      <Image
        src={bgImage}
        alt="Tarma Estampas Andinas"
        class="object-cover w-full h-full object-center md:scale-100 brightness-90 md:brightness-95"
        loading="eager"
        width={1920}
        height={1080}
      />
    </div>
    <div
      class="absolute w-screen h-screen bg-gradient-to-b md:bg-gradient-to-r from-black via-transparent to-transparent opacity-50"
    >
    </div>
    <div class="mx-auto max-w-[1200px] md:px-12">
      <div class="grid md:grid-cols-2 md:place-items-center md:h-screen">
        <div>
          <div class="relative">
            <div class="flex items-center flex-col md:items-start">
              <div class="hidden md:block">
                <h1 class="text-white font-bold text-7xl">Estampas Andinas</h1>
                <p class="text-white font-bold text-2xl py-8 w-[60%]">
                  Música andina, huaynos tarmeños y más.
                </p>
                <div class="flex justify-left w-full items-left">
                  <p
                    class="full-w text-xl text-white drop-shadow-2xl w-[60%] text-left pb-2 hidden md:flex"
                  >
                    <a
                      class="underline"
                      href="https://s137.radiolize.com/public/estampas_andinas_zrkumz"
                      target="_blank"
                      >Si el reproductor no se visualiza, click en el link</a
                    >
                  </p>
                </div>
              </div>
              <Image
                src={estampaMobile}
                alt="Estampas Andinas"
                class="w-80 pb-10 pt-14 md:pt-0 md:pb-8 md:hidden"
                loading="eager"
                width={320}
                height={320}
              />
              <Image
                src={estampaDesktop}
                alt="Estampas Andinas"
                class="w-80 pb-10 pt-14 md:pt-0 md:pb-8 hidden md:block md:w-[80%] -translate-x-10"
                loading="eager"
                width={640}
                height={640}
              />
              <p
                class="text-2xl text-white drop-shadow-2xl w-[85%] text-center pb-2 md:hidden"
              >
                Todos los Domingos<br />de 6am a 9am
              </p>
            </div>
          </div>
        </div>
        <div class="relative flex flex-col items-center mx-auto px-6">
          <div
            class="rounded-t-2xl px-4 pt-4 border border-gray-500 backdrop-blur-2xl backdrop-brightness-80"
          >
            <iframe
              src="https://s137.radiolize.com/public/estampas_andinas_zrkumz/embed?theme=light"
              class="w-full min-h-[140px]"></iframe>
          </div>
          <div
            class="bg-gray-100 mb-8 rounded-b-2xl border-t-0 border-gray-500 border overflow-hidden w-full"
          >
            <iframe
              src="https://s137.radiolize.com/public/estampas_andinas_zrkumz/history?theme=light"
              class="w-full h-[100px] md:h-[300px] pt-4 pl-1"></iframe>
          </div>
        </div>
      </div>
      <a
        class="whatsapp-link custom-bounce absolute right-4 bottom-4 flex justify-end items-start gap-2"
        href="https://wa.me/51964624589?text=Hola%2C%20quisiera%20mandar%20un%20mensaje"
        target="_blank"
      >
        <div
          class="relative chat-bubble bg-white font-serif px-2 py-1 rounded-sm border-solid border border-black"
        >
          <p>Envía tu mensaje por WhatsApp!</p>
        </div>
        <img
          src="https://upload.wikimedia.org/wikipedia/commons/6/6b/WhatsApp.svg"
          alt="WhatsApp"
          style="width:68px; height:68px;"
        />
      </a>
    </div>

    <div class="flex justify-center w-full items-center">
      <p
        class="full-w text-xl text-white drop-shadow-2xl w-[70%] text-center pb-2 md:hidden"
      >
        <a
          class="underline"
          href="https://s137.radiolize.com/public/estampas_andinas_zrkumz"
          target="_blank">Si el reproductor no se visualiza, click en el link</a
        >
      </p>
    </div>
  </main>

  <style>
    @keyframes custom-bounce {
      0%,
      100% {
        transform: translateY(0);
        animation-timing-function: cubic-bezier(0, 0, 0.2, 1);
      }
      /* The peak of the bounce */
      50% {
        transform: translateY(-25%);
        animation-timing-function: cubic-bezier(0.8, 0, 1, 1);
      }
    }

    /* Applies the animation on hover to any element with this class */
    .whatsapp-link:hover {
      animation: custom-bounce 1s infinite;
    }
  </style>
</Layout>
